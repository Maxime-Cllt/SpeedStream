# =============================================================================
# SPEEDSTREAM PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your production values
# WARNING: Never commit .env to version control!
# =============================================================================


# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# If POSTGRES_URL is set, it takes priority over individual variables
# -----------------------------------------------------------------------------
POSTGRES_URL=
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=speedstream
POSTGRES_PASSWORD=speedstream123
POSTGRES_DB=speedstream_db

# -----------------------------------------------------------------------------
# Redis Configuration
# If REDIS_URL is set, it takes priority over individual variables
# -----------------------------------------------------------------------------
REDIS_URL=
REDIS_HOST=localhost
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_MAX_MEMORY=256mb


# Host and port the server listens on
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

RUST_LOG=speedstream=info